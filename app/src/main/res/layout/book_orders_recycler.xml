<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true"
        android:id="@+id/cardViewMain"
        app:cardBackgroundColor="#fff">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="1"
                android:textSize="20dp"
                android:id="@+id/idOrder"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Name: Tran Minh Ngoc"
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/name"
                android:layout_toRightOf="@+id/image_view"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/idOrder"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Address: 373 Quang Trung"
                android:textSize="15dp"
                android:id="@+id/address"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Phone number: 0902320257"
                android:textSize="15dp"
                android:id="@+id/phone"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@+id/address"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Date: 20:20:20 20/12/2020"
                android:textSize="15dp"
                android:id="@+id/date"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@+id/phone"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Bill total: 100000"
                android:textSize="15dp"
                android:id="@+id/billTotal"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@+id/date"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>